{
    "includes": ["src/**/*,'basics/src/**"],
    "exclude": ["tests/**", "src/basics/**", "**/*.test.ts"],
    "compilerOptions": {
        "baseUrl": ".",
        "lib":["es2022","dom"],
        "outDir":"dest",
        "rootDir":"src",
        "module": "es2022",
        "moduleResolution": "node",
        "experimentalDecorators": true
    },
    "allowJs":true,
    "checkJs":true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true
}
